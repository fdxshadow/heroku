
<div class="row">
<div class="panel panel-success" >
<div class="panel-heading"><h3 class="text-success"><strong>Productos a comprar</strong></h3></div>
  <div class="panel-body ">
  		<table class="table table-hover table-responsive">
			<thead>
				<tr >
					<th>#</th>
					<th>Nombre</th>
					<th>Precio</th>
					<th>Accion</th>
				</tr>
			</thead>  			
			<tbody id="carro">
			<% var subtotal = 0; %>
			<% for(var i=0; i < car.length; i++) {%>
				<tr>
					<td>
					<img class="media-object" src="http://icons.iconarchive.com/icons/custom-icon-design/flatastic-2/72/product-icon.png" style="width: 72px; height: 72px;">
					</td>
					<td> <h4 class="text-success"><strong><%= car[i].nombre%></strong></h4></td>
					<td><h4 class="text-success"><strong><%=car[i].precio%></strong></h4></td>
					<td><button value="<%=car[i].id%>" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>Quitar del carro</button></td>
				</tr>
			</tbody>	
				<%  subtotal = parseInt(subtotal) + parseInt(car[i].precio) %>	

			<%}%>

			<% var envio = subtotal*0.10 %>
			<% var total= subtotal + envio%>
				<tfoot>
					<tr>
						<td></td>	
						<td></td>
						<td id="subtotal"><strong>Subtotal:</strong><%=subtotal%></td>
						<td></td>
					</tr>
					<tr>
						<th></th>	
						<th></th>
						<th id="envio"><strong>Envio:</strong><%=envio%></th>
						<th></th>
					</tr>
					<tr>
						<th></th>	
						<th></th>
						<th id="total"><h3><strong>Total:</strong><%=total%></h3></th>
						<th><a href="/pagar/<%=total%>" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-chevron-right"></span>Pagar</a></th>
					</tr>

					

				</tfoot>











  		</table>
  </div>
</div>
</div>